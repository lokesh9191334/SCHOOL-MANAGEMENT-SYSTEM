{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist"
      }
    }
  ],
  "functions": {
    "app.py": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/auth/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/static/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/mobile/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/ai_features/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/complaints/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/class-fees/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/substitution/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/timetable/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/date-sheet/(.*)",
      "destination": "/app.py"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}